<%= simple_form_for :search, url: flats_path, method: :get, html: { class: "d-flex align-items-center" } do |f| %>
  <%= f.input_field :query,
      value: params.dig(:search, :query),
      class: "form-control",
      placeholder: "Search flats..." %>
  <%= f.submit "Search", class: "btn btn-outline-success ms-2" %>
<% end %>
