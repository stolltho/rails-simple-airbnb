<div class="container">
  <h1>All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if flat.picture_url.present? %>
            <img src="<%= flat.picture_url %>" alt="<%= flat.name %>" class="card-img-top" style="height: 200px; object-fit: cover;">
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text flex-grow-1">
              <%= flat.address %><br>
              <i class="fa-solid fa-users"></i><%= flat.number_of_guests %>
              <i class="fa-solid fa-dollar-sign"></i><%= flat.price_per_night %>
            </p>
            <div class="d-flex gap-2">
              <%= link_to "More info", flat_path(flat), class: "text-primary text-decoration-none" %>
              <%= link_to "Edit", edit_flat_path(flat), class: "text-warning text-decoration-none" %>
              <%= link_to "Remove",
                flat_path(flat),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "text-danger text-decoration-none" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
