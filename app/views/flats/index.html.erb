<div class="container">
  <h1 class="mt-3">All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <% if flat.picture_url.present? %>
            <img src="<%= flat.picture_url %>" alt="<%= flat.name %>" class="card-img-top" style="height: 200px; object-fit: cover;">
          <% else %>
            <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
              <i class="fa-solid fa-image fa-3x text-white"></i>
            </div>
          <% end %>
          <div class="card-body d-flex flex-column p-0">
            <div class="bg-light p-3 mb-1 rounded">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text mb-2"><%= flat.address %></p>
              <div class="d-flex gap-3">
                <span class="small"><i class="fa-solid fa-users"></i> <%= flat.number_of_guests %></span>
                <span class="small"><i class="fa-solid fa-dollar-sign"></i> <%= flat.price_per_night %></span>
              </div>
            </div>
            <div class="d-flex gap-2 mt-auto p-3">
              <%= link_to "More info", flat_path(flat), class: "small text-primary text-decoration-none" %>
              <%= link_to "Edit", edit_flat_path(flat), class: "small text-warning text-decoration-none" %>
              <%= link_to "Remove",
                flat_path(flat),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
                class: "small text-danger text-decoration-none" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
